<?xml version="1.0" encoding="UTF-8"?>
<Context
        path="/euniversityTomcatApp"
        reloadable="true"
>
    <Resource
            validationQuery="SELECT 1"
            url="jdbc:mysql://localhost:3306/e_university?serverTimezone=Europe/Moscow"
            type="javax.sql.DataSource"
            password="admin"
            username="root"
            name="jdbc/mysqlconnector"
            maxWait="5000"
            maxIdle="2"
            maxActive="4"
            driverClassName="com.mysql.cj.jdbc.Driver"
            testOnBorrow="true"
            validationInterval="60000"
    >
    </Resource>
</Context>