<!DOCTYPE web-app PUBLIC '-//Sun Microsystems, Inc.//DTD
  Web Application 2.3//EN' 'http://java.sun.com/dtd/web-app_2_3.dtd'>

<web-app>
    <display-name>
        Welcome to e-university
    </display-name>

    <description>
        Welcome to e-university
    </description>

    <servlet>
        <servlet-name>hello</servlet-name>
        <servlet-class>com.github.varenytsiamykhailo.euniversity.web.HelloWorldServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>jspTest</servlet-name>
        <servlet-class>com.github.varenytsiamykhailo.euniversity.web.jspTestServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>SimpleListServlet</servlet-name>
        <servlet-class>com.github.varenytsiamykhailo.euniversity.web.SimpleListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>hello</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>jspTest</servlet-name>
        <url-pattern>/jspTest</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>SimpleListServlet</servlet-name>
        <url-pattern>/simple</url-pattern>
    </servlet-mapping>

    <resource-ref>
        <description>MySQL Connection</description>
        <res-ref-name>jdbc/mysqlconnector</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <taglib>
        <taglib-uri>
            http://wwww.someurl.ru
        </taglib-uri>
        <taglib-location>
            /WEB-INF/tld/hello.tld
        </taglib-location>
    </taglib>
</web-app>